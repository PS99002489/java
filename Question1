    <script>
        function showErr(ele, msg){
            $get(ele).innerText = msg;
        }
        function validate(){
            //get all the values....
            let name = document.regForm.name.value;
            let email = document.regForm.email.value;
            let mobile = document.regForm.phone.value;
            let date = document.regForm.date.value;
            let bill_amount = document.regForm.bill_amount.value;
            //name validation
            if(name == "" || name == null){
                showErr("errName", "Name is mandatory")
                return false;
            }else{
                showErr("errName", "")
            }
            //email validation    
            if(email == ""){
                showErr("errEmail", "Email is mandatory")
                return false;
            }else{
                showErr("errEmail", "")
            }

            let regEx = new RegExp("^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$");
            if(regEx.test(email) == false){
                showErr("errEmail", "Email is not in a valid format")
                return false;
            } else {
                showErr("errEmail", "")
            }
            //phone no validation
            regEx = new RegExp("/^[1-9]\d{10}$/");
            if(mobile == "" || (!regEx.test(mobile)))
                return false;
            //amount validation
            if(billamount == "" || billamount == null){
                showErr("errbillamount", "It is mandatory")
                return false;
            }else{
                showErr("errbillamount", "")
            }

            //date validation:
            regEx=new RegExp("[1-9]")
            if(date == "" || (!regEx.test(date)))
                return false;   

            return true;//After all the validations are done successfully
        }
    </script>
